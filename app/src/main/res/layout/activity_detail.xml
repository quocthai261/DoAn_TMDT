<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Detail_Activity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imv_Product"
                android:layout_width="match_parent"
                android:layout_height="450dp"
                android:scaleType="centerCrop"
                android:src="@drawable/product" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dp">

                <TextView
                    android:id="@+id/tv_name_product"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="10dp"
                    android:justificationMode="inter_word"
                    android:text="Tên sản phẩm"
                    android:textColor="@color/black"
                    android:textSize="25sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_detail_price"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dp"
                    android:text="300.000đ"
                    android:textColor="#D33F25"
                    android:textSize="30sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <View
                            android:layout_width="110dp"
                            android:layout_height="1dp"
                            android:background="#757575" />

                        <TextView
                            android:layout_width="170dp"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="THÔNG TIN SẢN PHẨM"
                            android:textStyle="bold" />

                        <View
                            android:layout_width="110dp"
                            android:layout_height="1dp"
                            android:background="#757575" />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="20dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:gravity="center|start"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="110dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="Kích Thước:"
                            android:textColor="@color/black"
                            android:textSize="18sp" />

                        <RadioGroup
                            android:id="@+id/radio_gr_size"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <RadioButton
                                android:id="@+id/size_S"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:background="@drawable/rbtn_selector"
                                android:button="@android:color/transparent"
                                android:clickable="true"
                                android:gravity="center"
                                android:text="S"
                                android:textColor="@drawable/rbtn_text_selector" />

                            <RadioButton
                                android:id="@+id/size_M"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:layout_marginStart="15dp"
                                android:background="@drawable/rbtn_selector"
                                android:button="@android:color/transparent"
                                android:checked="true"
                                android:clickable="true"
                                android:gravity="center"
                                android:text="M"
                                android:textColor="@drawable/rbtn_text_selector" />

                            <RadioButton
                                android:id="@+id/size_L"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:layout_marginStart="15dp"
                                android:background="@drawable/rbtn_selector"
                                android:button="@android:color/transparent"
                                android:clickable="true"
                                android:gravity="center"
                                android:text="L"
                                android:textColor="@drawable/rbtn_text_selector" />

                            <RadioButton
                                android:id="@+id/size_XL"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:layout_marginStart="15dp"
                                android:background="@drawable/rbtn_selector"
                                android:button="@android:color/transparent"
                                android:clickable="true"
                                android:gravity="center"
                                android:text="XL"
                                android:textColor="@drawable/rbtn_text_selector" />

                            <RadioButton
                                android:id="@+id/size_XXL"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:layout_marginStart="15dp"
                                android:background="@drawable/rbtn_selector"
                                android:button="@android:color/transparent"
                                android:clickable="true"
                                android:gravity="center"
                                android:text="XXL"
                                android:textColor="@drawable/rbtn_text_selector" />

                        </RadioGroup>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:gravity="center|start"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="110dp"
                            android:layout_height="wrap_content"
                            android:text="Số lượng:"
                            android:textColor="@color/black"
                            android:textSize="18sp" />

                        <TextView
                            android:id="@+id/tv_minus"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:background="#CDCDCD"
                            android:clickable="true"
                            android:gravity="center"
                            android:text="–"
                            android:textColor="@color/black"
                            android:textSize="20sp" />

                        <TextView
                            android:id="@+id/tv_count"
                            android:layout_width="60dp"
                            android:layout_height="30dp"
                            android:background="#E6E6E6"
                            android:clickable="true"
                            android:gravity="center"
                            android:text="1"
                            android:textSize="20sp" />

                        <TextView
                            android:id="@+id/tv_plus"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:background="#CDCDCD"
                            android:clickable="true"
                            android:gravity="center"
                            android:text="+"
                            android:textColor="@color/black"
                            android:textSize="20sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:gravity="center|start"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="110dp"
                            android:layout_height="wrap_content"
                            android:text="Kho:"
                            android:textColor="@color/black"
                            android:textSize="18sp" />

                        <TextView
                            android:id="@+id/tv_Warehouse"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="100"
                            android:textColor="@color/black"
                            android:textSize="18sp" />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/tv_description"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:justificationMode="inter_word"
                        android:paddingVertical="20dp"
                        android:text="If you want to have a simple Line in your Layout to separate two views you can use a generic View with the height and width you want the line to have and a set background color."
                        android:textColor="@color/black"
                        android:textSize="18sp" />

                </LinearLayout>


                <TextView
                    android:id="@+id/tv_check"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="5dp"
                    android:text="Đánh giá từ người dùng:"
                    android:textColor="@color/black"
                    android:textSize="18sp" />


                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rcv_comment"
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:layout_marginBottom="5dp"
                    android:scrollbars="vertical" />

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="70dp">

                    <EditText
                        android:id="@+id/et_Cmt"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:background="@drawable/gradient_bg"
                        android:gravity="start"
                        android:hint="..."
                        android:justificationMode="inter_word"
                        android:padding="10dp" />

                    <ImageButton
                        android:id="@+id/btn_send"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="bottom|end"
                        android:layout_marginEnd="7dp"
                        android:layout_marginBottom="7dp"
                        android:background="@android:color/transparent"
                        android:src="@drawable/baseline_send_24" />

                </FrameLayout>

            </LinearLayout>
        </LinearLayout>

    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/gradient_bg_2"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_add_to_cart"
                android:layout_width="275dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:backgroundTint="#9F2C2C"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:letterSpacing="0"
                android:text="Thêm vào giỏ hàng"
                android:textAllCaps="false"
                android:textSize="18sp"
                app:cornerRadius="0dp" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="0dp">

                <ImageButton
                    android:id="@+id/i_btn_cart"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:background="@drawable/gradient_bg_2"
                    android:src="@drawable/baseline_shopping_cart_24" />

                <com.nex3z.notificationbadge.NotificationBadge
                    android:id="@+id/badge"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:layout_marginStart="75dp"
                    android:layout_marginTop="5dp"
                    app:nbMaxTextLength="2" />

            </FrameLayout>


        </LinearLayout>

    </LinearLayout>
</RelativeLayout>