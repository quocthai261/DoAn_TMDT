<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Payment_Activity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#EDEDED"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="90dp"
                    android:background="@color/purple_200"
                    android:gravity="start|bottom"
                    android:padding="15dp"
                    android:text="Thanh toán"
                    android:textColor="@color/white"
                    android:textSize="20sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:orientation="vertical"
                        android:paddingHorizontal="10dp"
                        android:paddingVertical="10dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tv_location_product"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:drawableStart="@drawable/baseline_location_on_24"
                                android:drawablePadding="5dp"
                                android:text="Địa chỉ người nhận"
                                android:textColor="@color/black"
                                android:textSize="16sp" />

                        </LinearLayout>

                        <TextView
                            android:id="@+id/user_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingStart="30dp"
                            android:text="User name"
                            android:textColor="@color/black"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/user_phone_number"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingStart="30dp"
                            android:text="Phone number"
                            android:textColor="@color/black"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/user_address"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingStart="30dp"
                            android:text="Address"
                            android:textColor="@color/black"
                            android:textSize="16sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:background="@color/white"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:drawableStart="@drawable/baseline_shopping_basket_24"
                            android:drawablePadding="5dp"
                            android:padding="10dp"
                            android:text="Danh sách sản phẩm:"
                            android:textColor="@color/black"
                            android:textSize="18sp" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="#DFDFDF" />

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/rcv_payment"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:paddingHorizontal="10dp"
                            android:paddingVertical="10dp">

                            <TextView
                                android:id="@+id/quantity"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Tổng số tiền (2 sản phẩm):"
                                android:textColor="@color/black"
                                android:textSize="16sp" />

                            <TextView
                                android:id="@+id/total_price"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="100.000đ"
                                android:textAlignment="textEnd"
                                android:textColor="#D33F25"
                                android:textSize="16sp" />

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:background="@color/white"
                        android:orientation="vertical"
                        android:paddingHorizontal="10dp"
                        android:paddingVertical="10dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:drawableStart="@drawable/baseline_payment_24"
                            android:drawablePadding="5dp"
                            android:text="Phương thức thanh toán:"
                            android:textColor="@color/black"
                            android:textSize="18sp" />
                        <!--Cái này để cho đẹp thôi chắc kh cần cái này đâu nha-->

                        <RadioGroup
                            android:id="@+id/rad_group"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <com.google.android.material.radiobutton.MaterialRadioButton
                                android:id="@+id/vietin_rad"
                                android:layout_width="match_parent"
                                android:layout_height="35dp"
                                android:drawableEnd="@drawable/vietin"
                                android:text="VietinBank"
                                android:textSize="18sp" />

                            <com.google.android.material.radiobutton.MaterialRadioButton
                                android:id="@+id/vietcom_rad"
                                android:layout_width="match_parent"
                                android:layout_height="35dp"
                                android:drawableEnd="@drawable/vietcom"
                                android:text="Vietcombank"
                                android:textSize="18sp" />

                            <com.google.android.material.radiobutton.MaterialRadioButton
                                android:id="@+id/mb_rad"
                                android:layout_width="match_parent"
                                android:layout_height="35dp"
                                android:drawableEnd="@drawable/mb"
                                android:text="MB Bank"
                                android:textSize="18sp" />

                            <com.google.android.material.radiobutton.MaterialRadioButton
                                android:id="@+id/non_rad"
                                android:layout_width="match_parent"
                                android:layout_height="35dp"
                                android:checked="true"
                                android:text="Thanh toán khi giao hàng"
                                android:textSize="18sp" />
                        </RadioGroup>

                        <ImageView
                            android:id="@+id/imv_card_payment"
                            android:layout_width="match_parent"
                            android:layout_height="245dp"
                            android:layout_marginTop="5dp"
                            android:scaleType="centerCrop"
                            android:visibility="gone" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="10dp"
                        android:background="@color/white"
                        android:orientation="vertical"
                        android:paddingHorizontal="10dp"
                        android:paddingVertical="10dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:drawableStart="@drawable/baseline_event_note_24"
                            android:drawablePadding="5dp"
                            android:text="Chi tiết thanh toán"
                            android:textColor="@color/black"
                            android:textSize="18sp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Tổng tiền hàng"
                                android:textSize="16sp" />

                            <TextView
                                android:id="@+id/total_price_product"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="100000d"
                                android:textAlignment="textEnd"
                                android:textSize="16sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="3dp"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Tổng tiền phí vận chuyển"
                                android:textSize="16sp" />

                            <TextView
                                android:id="@+id/total_price_delivery"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="30.000đ"
                                android:textAlignment="textEnd"
                                android:textSize="16sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="3dp"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Tổng thanh toán"
                                android:textColor="@color/black"
                                android:textSize="18sp" />

                            <TextView
                                android:id="@+id/total_price_pay"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="130000d"
                                android:textAlignment="textEnd"
                                android:textColor="#D33F25"
                                android:textSize="18sp" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="80dp"
                        android:background="@color/white"
                        android:orientation="vertical"
                        android:paddingHorizontal="10dp"
                        android:paddingVertical="10dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:drawableStart="@drawable/baseline_text_snippet_24"
                            android:drawablePadding="5dp"
                            android:text="@string/privacy"
                            android:textColor="@color/black"
                            android:textSize="18sp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingStart="30dp"
                            android:text="@string/privacy2"
                            android:textColor="@color/black"
                            android:textSize="18sp" />

                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>
        </ScrollView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/gradient_bg_2"
                android:gravity="center"
                android:paddingLeft="10dp"
                android:text="Tổng thanh toán: "
                android:textSize="14sp" />

            <TextView
                android:id="@+id/total_price_last"
                android:layout_width="172dp"
                android:layout_height="match_parent"
                android:background="@drawable/gradient_bg_2"
                android:gravity="center"
                android:text="0đ"
                android:textColor="#D33F25"
                android:textSize="22sp" />

            <Button
                android:id="@+id/btn_payment"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:backgroundTint="#9F2C2C"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:letterSpacing="0"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                android:text="Thanh toán"
                android:textAllCaps="false"
                android:textSize="14sp"
                app:cornerRadius="0dp" />

        </LinearLayout>
    </LinearLayout>

</RelativeLayout>