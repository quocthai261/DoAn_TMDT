<resources>
    <!-- Base application theme. -->
    <style name="Theme.TryAgain" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowTranslucentStatus">true</item>
        <!--        <item name="android:windowTranslucentNavigation">true</item>-->
        <!-- Primary brand color. -->

        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="SCREEN">
        <item name="android:background">#E6E6E6</item>
    </style>

    <style name="TEXT_BOX">
        <item name="android:background">@color/white</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:drawableTint">@color/black</item>
        <item name="android:textColorHint">#FF393939</item>
    </style>

    <style name="IMG_BTN">
        <item name="android:backgroundTint">#E5E5E5</item>
        <item name="tint">@color/black</item>
    </style>

    <style name="BUTTON">
        <item name="backgroundTint">@color/black</item>
        <item name="android:textColor">#000</item>
        <item name="android:background">@drawable/border</item>
    </style>

    <style name="TEXT_LOW">
        <item name="android:background">@color/white</item>
        <item name="android:textColor">#B54422</item>
    </style>

    <style name="TEXT_HIGH">
        <item name="android:background">@color/white</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="VIEW">
        <item name="android:background">#E6E6E6</item>
    </style>
</resources>